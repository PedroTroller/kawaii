{
  "name": "malukenho/kawaii-gherkin",
  "description": "A small library to fix annoying gherkin code style",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/malukenho/kawaii-gherkin",
  "keywords": [
    "gherkin",
    "code standard",
    "code style"
  ],
  "authors": [
    {
      "name": "Jefersson Nathan",
      "email": "malukenho@phpse.net"
    }
  ],
  "autoload": {
    "psr-4": {
      "KawaiiGherkin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "KawaiiGherkinTest\\": "tests/"
    }
  },
  "require": {
    "php": "~5.6||~7",
    "behat/gherkin": "^4.4",
    "symfony/finder": "^3.0",
    "symfony/console": "^3.0",
    "sebastian/diff": "^1.4"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.1"
  },
  "bin": [
    "bin/kawaii-gherkin"
  ]
}
